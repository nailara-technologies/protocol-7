## >:] ##

# name  = base.max-len.val-hash-keys

my $hash_ref = shift;
warn 'expected hash reference <{C1>' if ref($hash_ref) ne 'HASH';

return max map {
    map {length}
        keys %{ $hash_ref->{$ARG} // {} }
} keys %{$hash_ref};

