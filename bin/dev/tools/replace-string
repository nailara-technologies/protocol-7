#!/usr/bin/perl
use strict;
use warnings;

my $changes = 0;
my @files   = @ARGV;
if ( !@files ) {
    opendir( DIR, '.' ) or die $!;
    @files = readdir(DIR);
    closedir(DIR);
}

$! = 1;

print "\n<!> [ make sure you have backups ] <!>\n .\n"
    . " :\n :: find    :. ";
my $find = <STDIN>;
chop($find);
print " :: replace :. ";
my $replace = <STDIN>;
chop($replace);

$/ = undef;

print " ::\n";

foreach my $file (@files) {
    if ( -f $file ) {
        print " :: parsing file $file..\n";
        open( FILE, "<$file" ) or die $!;
        my $file_data = <FILE>;
        close(FILE);
        $changes += $file_data =~ s/\Q$find/$replace/gm;
        open( FILE, ">$file" ) or die $!;
        print FILE $file_data;
        close(FILE);
    }
}

print " ::\n ::\n :::. [ done. ($changes changes) ]\n\n";

