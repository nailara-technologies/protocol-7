#!/bin/bash

export DISPLAY=:0.0

cd /data/projects/protocol-7 # <-- adapt to your own source branch directory

clear

watch -c --no-title -n17 "git status | strip-ansi-colors | grep -v git |
    /usr/bin/aosd_cat -p 8 -l 13 -R darkcyan \
    -S darkblue -n 'White Rabbit' -y -13 -x -24 \
    -f 13777 -o 17777 -u 17777 -r 127 -s 3 -a 17777"

