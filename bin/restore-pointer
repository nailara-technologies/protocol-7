#!/usr/bin/perl
use v5.24;
use strict;
use English;
use warnings;

$ENV{'DISPLAY'} //= ':0.0';

use Gtk3;
Gtk3->init;

say "\n  :: restoring pointer ::\n";

my $cursor = Gtk3::Gdk::Cursor->new('left-ptr');
my $screen = Gtk3::Gdk::Screen::get_default();
Glib::Timeout->add( 0, sub { Gtk3->main_quit } );
$screen->get_root_window->set_cursor($cursor);

Gtk3->main;

