modules.load = auth net protocol io.ip auto-hide
[load_modules:<modules.load>]
[init_modules]

[root.drop_privs:<system.privs.user>]

[net.connect_to_cube:'ip.tcp']

[base.X-11.get_display]
[auto-hide.startup]
[base.get_session_id]

[event.loop]
