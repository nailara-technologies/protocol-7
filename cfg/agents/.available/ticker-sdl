
 .:[ SDL-based ticker agent ]:.

buffer.system.log_cmd = log.msg

ticker-sdl.child.renice_fh = [base.spawn.renice_child]

[set_privs:'nailara']

[load_config_file:'defaults']

access.cmd.usr.core = help ping reload verify_instance read_file pause resume \
                      get_opacity

access.cmd.usr.parent = read_file

access.cmd.usr.child  = core.xserver.wait_visible core.xserver.raise_window \
                        core.layout.assign_window core.xserver.set_opacity \
                        core.xserver.keep_above core.whoami \
                        core.root.notify_online core.rss-ticker.resend_update


#                known (expected) fonts:  DroidSans DroidSans-Bold DroidSansMono
#                                         DroidSerif-Bold DroidSerif-Regular
ticker-sdl.font.name = DroidSerif-Bold

ticker-sdl.use_transparency = 1

ticker-sdl.request_rss_updates = 0 # ask rss-ticker agent for updates on startup

#ticker-sdl.opacity = 42 # [5-100]

ticker-sdl.redraw_delay = 7
ticker-sdl.renice_priority = -15
ticker-sdl.allow_non_regular_files = 0

modules.preload = config.json ticker-sdl.config
[load_modules:<modules.preload>]
[init_modules]

[config.json.import_file:'ticker-sdl.config.json']

modules.load = auth net io.ip ticker-sdl.base
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_coordinates]
[ticker-sdl.base.fork_init]

[event.loop]
