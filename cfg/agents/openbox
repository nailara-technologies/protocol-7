
  .:[ FVWM agent ]:.

buffer.system.log_cmd = log.msg

[load_config_file:'defaults']
[load_config_file:'desktop']

access.cmd.usr.core = help ping version reload verify_instance get_pid

openbox.config_name = minimal

openbox.prefer_patched_openbox = 1 # see ./bin/openbox/..

modules.load = auth net io.ip openbox
[load_modules:<modules.load>]

[set_privs:<x11.user>] # -> autodiscovery

[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[openbox.start_wm]
[base.get_session_id]

[event.loop]
