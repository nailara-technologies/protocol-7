
 .:[ (X11) 'openbox' WM wrapper agent ]:.

buffer.agent.log_cmd = log.msg

[load_config_file:'shared-params']
[load_config_file:'x11-vars']

access.cmd.usr.core = help heart version reload verify-instance cur-pid

openbox.config_name = minimal

openbox.prefer_patched_openbox = 1 # see ./bin/openbox/..

modules.load = auth net io.ip openbox
[load_modules:<modules.load>]

[set_privs:<x11.user>] # -> autodiscovery

[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[openbox.start_wm]
[base.get_session_id]

[event.loop]
