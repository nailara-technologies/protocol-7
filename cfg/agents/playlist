
 .:[ nailara 'playlist' management agent ]:.

buffer.agent.log_cmd = log.msg

[set_privs:'nailara']

[load_config_file:'defaults']

access.cmd.usr.core = help ping reload verify_instance list * *.*

playlist.http.check_content_types = 1
playlist.http.url_types_max_retry = 0  # <- for url types 'likely' being "html"
playlist.cfg.change_notifications = 0
playlist.cfg.allow_url_flag_syntax= 1
playlist.cfg.cache_content_types  = 1

update.notify_agents = media mpv browser impressive webcam
#update.restart_on_empty = rss-ticker ticker-sdl weather

modules.load = auth net io.ip config.json digest.sha digest.crc playlist
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

playlist.file_name = '<system.conf_path>/config.playlist.default'

[config.json.import_file:'playlist.config.json']

[playlist.load_file:<playlist.file_name>]

[playlist.update_hidden]

[event.loop]
