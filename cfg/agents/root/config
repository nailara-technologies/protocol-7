
.:[ nailara 'root' process management agent ]:.

buffer.agent.log_cmd = log.msg

[load_config_file:'defaults']
[load_config_file:'desktop']

modules.load = root jobqueue net io.ip auth.agent \
                    config.json digest.sha crypt.random

load.spawn_config = 'example' #   <-  [ ./cfg/agents/root/spawn-setup.example ]

access.cmd.usr.core = *

root.cfg.install_bin_nlr = yes
root.cfg.nlr_bin_path = /usr/local/bin/nlr
system.nlr_src_path = bin/src/nlr_client.c              # /usr/local/nailara/..

[load_modules:'config.json root.config']
[init_modules]

[load_modules:<modules.load>]
[init_modules]

system.internal_verbosity = 2

[root.call_cmd:<system.args>]

[event.loop]
