
.:[ nailara 'nroot' process management agent ]:.

buffer.agent.log_cmd = log.msg

[load_config_file:'shared-params']
[load_config_file:'x11-vars']

modules.load = nroot jobqueue net io.ip auth.agent \
               config.json digest.bmw crypt.random

load.spawn_config = 'example' #   <-  [ ./cfg/agents/nroot/spawn-setup.example ]

access.cmd.usr.core = *

nroot.cfg.install_bin_nlr = yes
nroot.cfg.nlr_bin_path = /usr/local/bin/nlr
system.nlr_src_path = bin/src/nlr.c # /usr/local/nailara/..,

nroot.host-reboot.enabled    = 1
nroot.host-reboot.term-delay = 1.3787

nroot.system-poweroff.enabled    = 1
nroot.system-poweroff.term-delay = 1.3787

[load_modules:'config.json nroot.config']
[init_modules]

[load_modules:<modules.load>]
[init_modules]

system.internal_verbosity = 2

[nroot.call_cmd:<system.args>]

[event.loop]
