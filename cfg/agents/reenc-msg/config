
 .:[ (X11, ffmpeg) "reencoding video" notification agent ]:.

[set_privs:'nobody']

buffer.agent.log_cmd = log.msg

[load_config_file:'shared-params']

access.cmd.usr.core = help heart verify-instance refresh finished

modules.load = auth net io.ip reenc-msg
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_coordinates:undef,undef,'']   #  <- request for only ['tile-name']
[base.get_session_id]

reenc-msg.display_txt = '\\\\\\ reencoding \\\\\\'
reenc.msg.refresh_timeout = 7 # auto-shutdown after <n> seconds without refresh

[reenc-msg.open_window]
