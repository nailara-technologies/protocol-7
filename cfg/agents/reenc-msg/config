
 .:[ (X11, ffmpeg) "reencoding video" notification agent ]:.

buffer.agent.log_cmd = log.msg

[load_config_file:'shared-params']

[set_privs:<system.privs.user>]

access.cmd.usr.core = help ping verify-instance refresh finished

modules.load = auth net io.ip reenc-msg
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_coordinates:,,'']   #   <-  requests coords for ['tile-name'] only
[base.get_session_id]

reenc-msg.display_txt = 'reencoding video...'
reenc.msg.refresh_timeout = 8 # auto-shutdown after <n> seconds without refresh

[reenc-msg.open_window]
