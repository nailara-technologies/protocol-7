
 .:[ (generic) media / content player agent ]:.

system.privs.user = nailara

buffer.agent.log_cmd = history.append

# system.verbosity = 2 # [dbg!]
# system.internal_verbosity = 2


[load_config_file:'shared-params']

media.vid_frame_dir = /tmp/.video_frames

media.cfg.fade_on_switch  = 1 # fade in on switch ( browser -> mpv [currently] )
media.cfg.can_self_restart = 1 # auto-recovery ( through media agent restart )
media.cfg.autospeed_notrans = 1 # disable mpv / browser fading on load alerts

access.cmd.usr.core    = help heart reload verify-instance * # <- LLL
access.cmd.usr.mpv     = whoami
access.cmd.usr.browser = whoami

modules.load = auth net io.ip io.unix plugin.auth digest media
[load_modules:<modules.load>]
[init_modules]

auth.supported_methods = unix
[file.make_path:'/tmp/.n/s',0777]
unix.agent.path = [digest.elf.b32:"<system.agent.name>:<system.agent.subname>"]
unix.sock = [base.open:'unix','in',"/tmp/.n/s/<unix.agent.path>"]

[set_privs:<system.privs.user>]

core.reroute.pattern.usr = ^(?!core)
core.reroute.pattern.match = ^(?!layout\.|whoami)
core.reroute.pattern.replace = core.
[base.proto.bind:<unix.sock>,'nailara']

[net.connect_to_core:'ip.tcp']

[base.x11.get_display]
[base.x11.get_geometry]
[base.x11.get_coordinates]

[media.startup]

[event.loop]
