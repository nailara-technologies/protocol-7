
 .:[ simple 'loading'-animation 'splash screen' agent ]:.

system.privs.user = nailara

[set_privs:<system.privs.user>]

buffer.agent.log_cmd = log.msg

[load_config_file:'shared-params']

access.cmd.usr.core = help ping verify-instance

loadsplash.do_fade_in        = 0      #   <- fading in handled by compton now ..
loadsplash.min_startup_delay = 0.42

modules.load = auth net io.ip loadsplash
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_coordinates:,,'']   #   <-  requests coords for ['tile-name'] only

[loadsplash.open_window]
