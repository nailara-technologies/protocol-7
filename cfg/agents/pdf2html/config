
 .:[ 'pdf2html' conversion agent ]:.

buffer.agent.log_cmd = history.append

[load_config_file:'shared-params']

access.cmd.usr.core = help heart reload verify-instance list show-buffer \
                      get_url check_format

access.cmd.usr.parent = help reload show-buffer convert_pdf

pdf.html.cache_dir   = /var/cache/pdf2html
pdf.html.cache_perm  = 0755
pdf.html.cache_timeout = 30 # days

modules.load = auth net io.ip digest.sha pdf.html.base
[load_modules:<modules.load>]
[init_modules]

[set_privs:<system.privs.user>]

[net.connect_to_core:'ip.tcp']

[pdf.html.base.fork_conv_child]

[event.loop]
