
 .:[ (X11) 'impressive' process wrapper agent ]:.

buffer.agent.log_cmd = log.msg

[base.renice:10]

system.privs.user = nailara

impressive.cfg.language = en # [en|de]

[load_config_file:'shared-params']

impressive.playlist.content_types = pdf image

access.cmd.usr.core = help ping reload verify-instance playlist_update \
                      pause resume status version

impressive.path.impressive_src = /usr/local/impressive/bin/impressive
impressive.path.impressive_tmp = /tmp/.impressive

impressive.cfg.autoinstall_impressive_py = 1 # -> /usr/local/impressive/bin/...

impressive.cfg.transition_delay    = 7
impressive.cfg.background_color   = 'FFFFFF'
impressive.cfg.black_on_fullscreen = 1
impressive.cfg.loadsplash_timeout = 11

impressive.cfg.light_mode = 0  # use only crossfade transition with higher delay
impressive.cfg.use_loadsplash = 0  # show 'loading' animation [loadsplash agent]

modules.load = auth net digest io.ip impressive
[load_modules:<modules.load>]
[init_modules]

[set_privs:<system.privs.user>]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_geometry]

impressive.subcfg = [base.x11.get_subconfig]
[impressive.process_subcfg]

[base.get_session_id]

[impressive.startup]

[event.loop]
