
 .:[ nailara 'mlist' management agent ]:.

buffer.agent.log_cmd = log.msg

[set_privs:'nailara']

[load_config_file:'shared-params']

access.cmd.usr.core = help heart reload verify-instance list * *.*

mlist.http.check_content_types = 1
mlist.http.url_types_max_retry = 0  # <- for url types 'likely' being "html"
mlist.cfg.change_notifications = 0
mlist.cfg.allow_url_flag_syntax= 1
mlist.cfg.cache_content_types  = 1

update.notify_agents = media mpv browser impressive webcam
#update.restart_on_empty = rss-ticker ticker-sdl weather

modules.load = auth net io.ip config.json digest.sha digest.crc mlist
[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

mlist.file_name = '<system.conf_path>/agents/mlist/example-playlist'

[config.json.import_file:'mlist.config.json']

[mlist.load_file:<mlist.file_name>]

[mlist.update_hidden]

[event.loop]
