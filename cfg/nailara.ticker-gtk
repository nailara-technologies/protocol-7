
  .:[ ticker-gtk agent ]:.

[base.renice:-15]

buffer.system.log_cmd = log.msg

[load_config_file:'defaults']

[set_privs:<system.privs.user>]

access.cmd.usr.core = help ping reload verify_instance * *.*

ticker-gtk.request_rss_updates = 0  # ask rss-ticker agent for update on startup

[load_modules:'config.json ticker-gtk.config']
[init_modules]

[config.json.import_file:'ticker-gtk.config.json']

#                known (expected) fonts:  DroidSans DroidSans-Bold DroidSansMono
#                                         DroidSerif-Bold DroidSerif-Regular
ticker-gtk.font.name = DroidSans

ticker-gtk.cfg.draw_outline = 1

ticker-gtk.use_transparency = 1 # set to '0' to disable fading / transp. backgr.
ticker-gtk.cfg.max_gpu_load = 67 # GPU load target in auto_speed mode

# ticker-gtk.bg_col   = FFFFFF
# ticker-gtk.bg_alpha = 100 # [0..100] 0 == opaque, 100 == transparent

modules.load = auth net io.ip ticker-gtk digest.sha digest.sha1

[load_modules:<modules.load>]
[init_modules]

[net.connect_to_core:'tcp/ip']

[base.x11.get_display]
[base.x11.get_coordinates]
ticker-gtk.subcfg = [base.x11.get_subconfig]
[ticker-gtk.process_subcfg]

[ticker-gtk.startup]

