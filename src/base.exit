# >:]

# name = base.exit

my $exit_code = ( scalar @_ and $_[0] =~ m|^\d+$| ) ? shift : 0;

my $exit_msg  = shift;
my $log_level = shift;

$exit_msg  //= ".. exit [ $exit_code ] called .,";
$log_level //= 1;

<[base.log]>->( $log_level, $exit_msg );

# Event->unloop_all() if defined &Event::unloop_all;

print STDOUT $ANSI{'reset'};
print STDERR $ANSI{'reset'};

CORE::exit($exit_code);

