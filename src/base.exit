# name = base.exit

my $exit_code = 0;
$exit_code = shift if @_ and $_[0] =~ /^\d+$/;
my $exit_msg  = shift;
my $log_level = shift;
$exit_msg  //= "exit($exit_code) called.";
$log_level //= 1;

<[base.log]>->( $log_level, $exit_msg );

Event->unloop_all() if defined &Event::unloop_all;

exit($exit_code);

