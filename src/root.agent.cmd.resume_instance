# >:]

# name  = root.agent.cmd.resume_instance
# param = <id>
# descr = send CONT signal to instance processes

my $instance_id = $$call{'args'};

return { 'mode' => 'nack', 'data' => 'instance id must be numeric!' }
    if $instance_id !~ /^\d+$/;
return { 'mode' => 'nack', 'data' => "instance not found!" }
    if not exists <root.agent.instance>->{$instance_id};
my $instance = <root.agent.instance>->{$instance_id};

<[root.enable_status_timer]>->($instance_id)
    if delete $instance->{'paused_status_timer'};

my $parent_pid = <root.agent.instance>->{$instance_id}->{'process'}{'id'};
my @pids = ( $parent_pid, @{ <[root.process.get_children]>->($parent_pid) } );

my $count = kill 'CONT', @pids;

my $es = $count > 1 ? 'es' : '';
<[base.log]>->( 1, "resumed instance $instance_id ($count process$es)" );
return {
    'mode' => 'ack',
    'data' => "$count process$es paused (SIGCONT)"
};
