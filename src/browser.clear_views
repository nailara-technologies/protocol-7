# >:]

# name = browser.clear_views

<browser.load_uri> = '';

my $bg_color = <browser.bg_color> // '#FFFFFF';

foreach my $id ( 1, 2 ) {
    my $view = <browser.gtk_obj.view>->{$id};
    $view->load_alternate_html(
        "<html><body bgcolor=\"$bg_color\"></body><html>",
        '[clear_all:blank]' );
}
