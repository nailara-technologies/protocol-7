# >:]

# name  = debug.cmd.dump
# param = [key_pattern]
# descr = dump internal program state

my $keyword = $$call{'args'} // '';
if ( not eval {qr/$keyword/} ) {
    ( my $regex_err = lc($@) ) =~ s/ in regex.+\n$//;
    return {
        'mode' => 'nak',
        'data' => "$regex_err in regex (invalid pattern)"
    };
}

$reply = {
    'mode' => 'data',
    'data' => <[base.dump_data]>->( undef, undef, $$call{'args'} )
};


