# >:]

# name = composition.handler.bg_color_reply

my $answer = shift;

return warn "unexpected (NAK) reply from xserver agent!"
    if $answer->{'cmd'} ne 'ACK';

<composition.x11_bg_color> = $answer->{'call_args'}->{'args'};

<[base.log]>->(
    1,
    " : received xserver background color '" . <composition.x11_bg_color> . "'"
);

