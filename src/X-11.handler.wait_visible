if ( length( $match_id // '' ) ) {

    <[X-11.cancel_wait_visible_timers]>->($wait_req);

    <[base.callback.cmd_reply]>->(
        $reply_id,
        {   'mode' => 'ack',
            'data' => $match_id
        }
    );
    delete <X-11.waiting>->{$id};
    return 0;
} else {
    return 1;
}

