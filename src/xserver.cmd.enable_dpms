# >:]

# name  = xserver.cmd.enable_dpms
# descr = [re]activate display power saving modes

return { 'mode' => 'nak', 'data' => 'xserver has no DPMS support' }
    if !<xserver.has_dpms>;

<xserver.x11>->DPMSEnable();
<xserver.x11>->DPMSInfo();
<xserver.x11>->DPMSSetTimeouts( 600, 600, 600 ); # <- move to config / automatic
<xserver.x11>->DPMSInfo();

<[base.log]>->( 1, "DPMS manually activated" );

return { 'mode' => 'ack', 'data' => 'DPMS enabled' };
