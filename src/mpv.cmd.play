# >:]

# name  = mpv.cmd.play
# param = <file|url>
# descr = play a file or url - replaces the entire playlist

my $file = $$call{'args'};

return { 'mode' => 'nack', 'data' => 'expected file or url' }
    if not defined $file or !length($file);

push( @{<mpv.reply_ids>}, $$call{'reply_id'} );
<mpv.success_reply_str> = 'command sent';

<[mpv.send_command]>->( 'loadfile', $file, 'replace' );

return { 'mode' => 'later' };
