# >:]

# name  = xserver.cmd.get_orientation
# descr = return xserver screen orientation

my $rotate = <xserver.orientation> // '';    # [left|right|normal|inverted]

my $orientation = (
           $rotate eq 'left'
        or $rotate eq 'right'
) ? 'portrait' : 'landscape';

return { 'mode' => 'ack', 'data' => $orientation }

