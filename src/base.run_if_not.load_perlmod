# >:]

# name = base.run_if_not.load_perlmod

my $perl_module = shift;
my $code_name   = shift;
my @params      = @_;

if ( $perl_module !~ /^(\w+|::)+$/ ) {
    <[base.log]>->( 0, "invalid module name '$perl_module'" );
    return 3;
}

if ( eval "use $perl_module" or $@ or length($!) ) {
    return $code{$code_name}->(@params);
} else {
    <[base.log]>->( 2, "loading '$perl_module' succeeded.." );
    return 0;
}
