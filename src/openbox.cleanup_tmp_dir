# >:]

# name = openbox.cleanup_tmp_dir

my $tmp_path = <openbox.home_path>;

if ( -d $tmp_path and $tmp_path =~ /openbox/ ) {
    <[base.log]>->( 1, "recursively removing tmp dir '$tmp_path'.." );
    rename( <openbox.log_file>, '/tmp/openbox.' . $$ ) or warn $!;
    unlink( '/tmp/openbox.' . $$ )                     or warn($!);
    remove_tree($tmp_path)                             or die "remove_tree: $!";
}

