# >:]

# name = media.handler.loadsplash_timeout

my $params       = shift->w->data;
my $agent_name   = $params->{'agent'};
my $timeout_secs = <media.loadsplash_timeout>;

return if !<media.loadsplash_running>;

<[base.log]>->(
    0, "loadsplash timeout [${timeout_secs}s] -- stopping 'loadsplash' agent!"
);

<[base.proto.nailara.command.send.local]>->(
    {   'command'   => "core.nroot.stop_implicit",
        'call_args' => { 'args' => <media.lsp_name> }
    }
);
