# >:]

# name  = root.set_up_ondemand_agents
# descr = set up specified agents for ondemand startup

<root.ondemand_agents> = [];

foreach my $agent_name (@_) {
    my $agent_config = <root.spawn_config.agents.config>->{$agent_name};
    my $start_ondemand = $agent_config->{'spawn'}->{'on-demand'} // 0;
    push( @{<root.ondemand_agents>}, $agent_name ) if $start_ondemand;
}
