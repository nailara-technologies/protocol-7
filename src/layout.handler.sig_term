# >:]

# name = layout.handler.sig_term

return
    if not defined <layout.current_layout>
    or !length(<layout.current_layout>);

my $cfg_file = <layout.cfg_directory> . '/layout.current';
<[base.log]>->( 1, "storing current layout in 'layout.current' config.." );

<[file.put]>->(
    $cfg_file,
    sprintf( "%.4f %s\n", <[base.time]>->(4), <layout.current_layout> )
);
