# >:]

# name  = xserver.cmd.get_screen_size
# descr = return xserver screen size in pixels

<xserver.x11>->choose_screen(0);    # LLL: doesn't support multiple screens yet!

my %screen_geom = <xserver.x11>->GetGeometry( <xserver.x11>->root );

my ( $width, $height ) = ( $screen_geom{'width'}, $screen_geom{'height'} );

return { 'mode' => 'ack', 'data' => "$width $height" }
