# >:]

# name  = base.cmd.time
# param = [date|unix[.<n>]]
# descr = return current time, date or unixtime[%.<n>f]

my $param = $$call{'args'};

if ( not defined $param ) {
    return {
        'mode' => 'ack',
        'data' => <[base.parser.timestamp]>->('clock')
    };
} elsif ( $param eq 'date' ) {
    return {
        'mode' => 'ack',
        'data' => <[base.parser.timestamp]>->('date')
    };
} elsif ( $param eq 'unix' ) {
    return {
        'mode' => 'ack',
        'data' => time()
    };
} elsif ( $param =~ /^unix\.(\d+)$/ ) {    # XXX: consider access control?
    my $float = $1;
    my $limit = 22;
    return {
        'mode' => 'nack',
        'data' => "current float precision limit is $limit"
        }
        if $float > $limit;
    return {
        'mode' => 'ack',
        'data' => <[base.time]>->($float)
    };
} else {
    return {
        'mode' => 'nack',
        'data' => "invalid parameter '$param'.. [date|unix[.<n>]]"
    };
}
