# >:]

# name = discover.cmd.start_announce_host

<discover.timer.announce_host> = <[event.add_timer]>->(
    {   'after'    => 0,
        'interval' => 5,
        'repeat'   => 1,
        'handler' => 'discover.handler.anounce_host_addr'

    }

);

return { 'mode' => 'ack', 'data' => 'starting announce timer' }
