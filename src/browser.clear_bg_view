# >:]

# name = browser.clear_bg_view

my $bg_index = <browser.overlay.index.bg>;
my $bg_color = <browser.bg_color> // '#FFFFFF';
my $view     = <browser.gtk_obj.view>->{$bg_index};

$view->load_alternate_html( "<html><body bgcolor=\"$bg_color\"></body><html>",
    '[clear_bg:blank]' );

