# >:]

# name = base.file.write_timestamp

my $timestamp_file = shift;

open( my $ts_fh, ">$timestamp_file" ) or die "$timestamp_file: $OS_ERROR";
print {$ts_fh} time() . "\n";
close($ts_fh);

