# >:]

# name  = root.agent.cmd.notify_online
# param = <agent|instance>
# descr = reply when agent startup complete or failed

<root.agent.notify_online> //= {};

my $agent_subname;
my $query_param = $$call{'args'};
my $reply_id    = $$call{'reply_id'};

return { 'mode' => 'nack', 'data' => 'expected agent name parameter' }
    if not defined $query_param or !length($query_param);

if ( $query_param =~ /^job:(\d+)$/ and my $job_id = $1 ) {
    my $instance_id;
    map {
        $instance_id = $_
            if <root.agent.instance>->{$_}->{'job_id'} == $job_id
    } keys %{<root.agent.instance>};
    if ( defined $instance_id ) {
        $query_param = $instance_id;
    } else {
        return {
            'mode' => 'nack',
            'data' => "unknown job id '$job_id'"
        };
    }
}

my $query_copy = $query_param;
$agent_subname = $1
    if $query_param !~ /^\d+/ and $query_param =~ s|\[([^\]]+)\]$||;

if (    not defined <[agent.get_id]>->($query_param)
    and not defined <root.agent.instance>->{$query_param} ) {
    my $rep_msg
        = $query_param =~ /^\d+$/
        ? "no such agent instance ($query_param)"
        : "no such agent in setup [$query_param]";
    return {
        'mode' => 'nack',
        'data' => $rep_msg
    };
}

if ( $query_param =~ /^(\d+)$/ and my $id = $1 ) {    # instance id
    my $core_sid = <root.agent.instance>->{$id}->{'core_sid'};
    my $prog_pid = <root.agent.instance>->{$id}->{'process'}->{'id'};
    if ( defined <root.agent.instance>->{$id} ) {
        return {
            'mode' => 'ack',
            'data' => "agent instance '$id' already online! [$core_sid]"
            }
            if <root.agent.instance>->{$id}->{'status'} eq 'online';
        return {
            'mode' => 'ack',
            'data' => "external program instance '$id'"
                . " already running! [PID=$prog_pid]"
            }
            if <root.agent.instance>->{$id}->{'status'} eq 'extbin';
    }
}

foreach my $id ( keys %{<root.agent.instance>} ) {    # agent name [+subname]
    my $core_sid = <root.agent.instance>->{$id}->{'core_sid'};
    my $prog_pid = <root.agent.instance>->{$id}->{'process'}->{'id'};
    if (<root.agent.instance>->{$id}->{'agent_name'} eq $query_param
        and (  not defined $agent_subname
            or not defined <root.agent.instance>->{$id}->{'subname'}
            or <root.agent.instance>->{$id}->{'subname'} eq $agent_subname )
        ) {
        return {
            'mode' => 'ack',
            'data' => "agent '$query_copy' already online! [$core_sid]"
            }
            if defined $core_sid
            and <root.agent.instance>->{$id}->{'status'} eq 'online';
        return {
            'mode' => 'ack',
            'data' => "external program '$query_copy'"
                . " already running! [PID=$prog_pid]"
            }
            if <root.agent.instance>->{$id}->{'status'} eq 'extbin';
    }
}

<[base.log]>->(
    2, "startup notification request for agent '$query_copy' received"
);

push( @{ <root.agent.notify_online>->{$query_copy} }, $reply_id );

return { 'mode' => 'later' }
