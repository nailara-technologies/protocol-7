# >:]

# name  = X-11.cancel_wait_visible_timers

my $wait_req = shift;
return if not defined $wait_req->{'timer'};

map {
    $wait_req->{'timer'}->{$_}->cancel
        and delete $wait_req->{'timer'}->{$_}
        if defined $wait_req->{'timer'}->{$_}
        and $wait_req->{'timer'}->{$_}->is_active;

} qw| timeout poll |;

delete $wait_req->{'timer'};

