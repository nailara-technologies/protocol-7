# >:]

# name  = root.agent.cmd.instance_pids
# param = [instance]
# descr = return list of instance process IDs

my $instance_id = $$call{'args'};

return {
    'mode' => 'nack',
    'data' => "invalid instance id parameter [numeric value expected!]"
    }
    if defined $instance_id and $instance_id !~ /^\d+$/;

if ( not defined $instance_id ) {
    my %pids;
    my $reply_list = '';
    foreach my $i_id ( sort { $a <=> $b } keys %{<root.agent.instance>} ) {
        my $parent_pid = <root.agent.instance>->{$i_id}->{'process'}{'id'};
        map { $pids{$_} = 1 }
            ( $parent_pid, @{ <[root.process.get_children]>->($parent_pid) } );
    }
    $reply_list .= join( ' ', sort keys(%pids) );
    return {
        'mode' => 'ack',
        'data' => $reply_list
    };

} elsif ( $instance_id =~ /^\d+$/ ) {
    return {
        'mode' => 'nack',
        'data' => "instance not found! [ root.list (agents|children) ]"
        }
        if not exists <root.agent.instance>->{$instance_id};
    my $parent_pid
        = <root.agent.instance>->{$instance_id}->{'process'}{'id'};
    return {
        'mode' => 'ack',
        'data' => join( ' ',
            $parent_pid, @{ <[root.process.get_children]>->($parent_pid) } )
    };
} else {
    return {
        'mode' => 'nack',
        'data' => 'instance id must be numeric!'
    };
}
