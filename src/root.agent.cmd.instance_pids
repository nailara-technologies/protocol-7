# >:]

# name  = root.agent.cmd.instance_pids
# param = [instance]
# descr = return list of instance process IDs

my $instance_id = $$call{'args'};

return {
    'mode' => 'nack',
    'data' => "expected instance id parameter"
    }
    if not defined $instance_id;

if ( not defined $instance_id ) {
    my $reply_list = '';
    foreach my $i_id ( sort { $a <=> $b } keys %{<root.agent.instance>} ) {
        my %pids;
        my $parent_pid
            = <root.agent.instance>->{$instance_id}->{'process'}{'id'};
        map { $pids{$_} = 1 } @{ <[root.process.get_children]>->($parent_pid) };
        $reply_list .= join( ' ', $i_id, $parent_pid, sort keys(%pids), "\n" );
    }
    return {
        'mode' => 'raw',
        'data' => $reply_list
    };

} elsif ( $instance_id =~ /^\d+$/ ) {
    return {
        'mode' => 'nack',
        'data' => "instance not found!"
        }
        if not exists <root.agent.instance>->{$instance_id};
    my $parent_pid
        = <root.agent.instance>->{$instance_id}->{'process'}{'id'};
    return {
        'mode' => 'ack',
        'data' => join( ' ',
            $parent_pid, @{ <[root.process.get_children]>->($parent_pid) } )
    };
} else {
    return {
        'mode' => 'nack',
        'data' => 'instance id must be numeric!'
    };
}
