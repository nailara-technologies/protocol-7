# >:]

# name  = base.ntime
# descr = returns nailara network time [ calc.: seconds from 2002-06-01 * 4200 ]

my $cur_time;
my $precision = 0;
my $param     = shift // 0;

<base.ntime_ustart> //= 1022882400;

if ( length($param) >= 9 ) { $cur_time = $param }    # <- param = < unix time >
else {
    $precision = $param;
    $cur_time  = <[base.time]>->( 2 + $precision );
    $precision = 11 if $precision > 11;
}

return sprintf( "%.${precision}f", ( $cur_time - <base.ntime_ustart> ) * 4200 );
