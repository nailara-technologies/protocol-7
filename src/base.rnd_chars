# name = base.rnd_chars

my $length = shift;
die "ammount of random bytes not specified" if not defined $length;
die "expected positive integer as argument (instead of '$length')"
    if $length !~ /^\d+$/ or $length < 1;

return random_string_from(
    '0123456789'
        . 'abcdefghijklmnopqrstuvwxyz'
        . 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'
        . '!.,-~_+*ยง%&/|?(){}:;',
    $length
);
