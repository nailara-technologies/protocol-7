# >:]

# name = ticker-gtk.handler.get_layer_reply

my $reply = shift;

if ( $reply->{'cmd'} eq 'ACK' ) {
    <ticker-gtk.layout.layer> = $reply->{'call_args'}->{'args'};
    if ( <ticker-gtk.layout.layer> == 100 ) {
        <[base.log]>->( 1, "layout layer == 100 <!> (enabling 'force_above')" );
        <ticker-gtk.window.force_above> = 1;
    }
}

<[ticker-gtk.open_window]>;

