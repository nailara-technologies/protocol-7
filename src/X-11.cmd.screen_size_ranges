# >:]

# name  = X-11.cmd.screen_size_ranges
# descr = return available screen size range

my @range;
if ( !<X-11.has_randr> ) {
    my @current_size
        = ( <X-11.x11>->width_in_pixels, <X-11.x11>->height_in_pixels );
    @range = ( @current_size, @current_size );
} else {
    @range = <X-11.x11>->RRGetScreenSizeRange( <X-11.x11>->root );
}

return {
    'mode' => 'ack',
    'data' => sprintf( "< %dx%d > .., < %dx%d >", @range )
    }

