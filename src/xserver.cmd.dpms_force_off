# >:]

# name  = xserver.cmd.dpms_force_off
# descr = power off the screen using DPMS

return { 'mode' => 'nack', 'data' => 'xserver has no DPMS support' }
    if !<xserver.has_dpms>;

<xserver.x11>->DPMSEnable();
<xserver.x11>->DPMSForceLevel(3);
<xserver.x11>->DPMSInfo();

<[base.log]>->( 1, "display manually forced OFF, DPMS enabled" );

return { 'mode' => 'ack', 'data' => 'display forced OFF, DPMS enabled' };
