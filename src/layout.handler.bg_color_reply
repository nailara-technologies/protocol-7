# >:]

# name = layout.handler.bg_color_reply

my $answer = shift;

return warn "unexpected (NAK) reply from xserver agent!"
    if $answer->{'cmd'} ne 'ACK';

<layout.x11_bg_color> = $answer->{'call_args'}->{'args'};

<[base.log]>->(
    1, " : received xserver background color '" . <layout.x11_bg_color> . "'"
);

