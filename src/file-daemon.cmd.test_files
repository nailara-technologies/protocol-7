# >:]

# name  = file-daemon.cmd.test_files
# descr = returns list of test files [debug cmd]

my $reply_str = '';

my $index = 0;

map {
    $reply_str .= sprintf( "[%d] ... %03d MB ... %s\n",
        ++$index, File::stat::stat($_)->size / 1024**2, $_ )
} @{<file-daemon.testfiles>};

return {
    'mode' => 'data',
    'data' => $reply_str
};

