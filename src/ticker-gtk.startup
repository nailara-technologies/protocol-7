# >:]

# name = ticker-gtk.startup

<[base.log]>->( 1, "checking layer setup.." );

<x11.title_str>
    = defined <system.agent.subname>
    ? <system.agent.name> . '[' . <system.agent.subname> . ']'
    : <system.agent.name>;

<[base.proto.nailara.command.send.local]>->(
    {   'command'   => 'core.layout.get_layer',
        'call_args' => { 'args' => <x11.title_str> },
        'reply'     => { 'handler' => 'ticker-gtk.handler.get_layer_reply' }
    }
);

<[ticker-gtk.main_loop]>;
