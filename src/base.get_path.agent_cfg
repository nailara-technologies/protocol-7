# name = base.get_path.agent_cfg

my $agent_name = shift // <system.agent.name>;

my $cfg_path = <system.conf_path>;

my $agent_cfg_path = "agents/$agent_name";
$agent_cfg_path .= "/config"
    if -d "$cfg_path/$agent_cfg_path" and -f "$cfg_path/$agent_cfg_path/config";

return $agent_cfg_path;

