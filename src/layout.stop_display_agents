# >:]

# name  = layout.stop_display_agents
# descr = quick fix to avoid remaining x11 agents on layout agent restart

if ( defined <layout.startup.stop_agents> ) {
    <[base.log]>->( 1, "stopping display agents (if present)" );
    <[base.proto.nailara.command.send.local]>->(
        {   'command'   => "core.nroot.stop_implicit",
            'call_args' => { 'args' => <layout.startup.stop_agents> }
        }
    );
}
if ( defined <layout.startup.restart_agents> ) {
    <[base.log]>->( 1, "restarting display agents (if present)" );
    <[base.proto.nailara.command.send.local]>->(
        {   'command'   => "core.nroot.restart",
            'call_args' => { 'args' => <layout.startup.restart_agents> }
        }
    );
}

