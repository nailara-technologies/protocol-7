# >:]

# name = media.handler.loadsplash_started

my $reply = shift;

my @content_types = keys %{<media.content.agent_map>};

if ( $reply->{'cmd'} eq 'ACK' ) {
    if (<media.children_ready>) {
        <[media.stop_loadsplash]>;
    } else {
        <media.loadsplash_running> = 1;
    }
} else {
    <[base.log]>->( 0, "<!> unable to start loadsplash agent.." );
    <media.loadsplash_running> = 0;
}

<[media.get_playlist]>->(@content_types);
