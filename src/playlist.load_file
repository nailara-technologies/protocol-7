# >:]

# name = playlist.load_file

<playlist.load_file.path> = my $file_path = shift;

die "expected playlist file path"
    if not defined $file_path or !length($file_path);
( my $file_name = $file_path ) =~ s|^.*/||;

if ( !-f $file_path ) {
    <[base.log]>->( 0, "playlist file '$file_path' not found!" );
    return -1;
}

if ( defined <playlist.b32id_src_str> ) {
    <[playlist.check_exclusive]>;
} else {
    <[playlist.callback.load_file]>->($file_path);
}

return 0
