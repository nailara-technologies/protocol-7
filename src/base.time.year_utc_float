# >:]

# name = base.time.year_utc_float

my $time  = shift // time;
my $float = shift // 4;
my @time  = gmtime($time);
my $year  = 1900 + $time[5];
my $days = <[base.time.is_leap_year]>->($year) ? 366 : 365; # + 1 [fractional] #
my $yday = $time[7] + $time % 86400 / 86400;

return sprintf( "%.0${float}f", $year % 100 + $yday / ( $days + 1 ) );

