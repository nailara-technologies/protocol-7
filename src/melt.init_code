# >:]

# name = melt.init_code

<[base.perlmod.load]>->( 'File::Path', qw/make_path/ );

( my $melt_bin_path = qx(which melt) ) =~ s|[^\w/]+||g;

if ( !-x $melt_bin_path ) {
    <[base.log]>->(
        0, "'melt' is not installed (or in path), aborting startup!"
    );
    exit(-1);
}

<melt.bin_path> = $melt_bin_path;

my $out_path = -d '/var/run' ? '/var/run/melt' : '/tmp/melt_out';

<melt.output_path> = <[file.make_path]>->($out_path);

0;
