# >:]

# name  = browser.callback.scroll_start_js_exec
# descr = initate js call to start scrolling (if possible)

my $call_sub = shift;
my $reply_id = shift;

<[browser.js_call]>->(
    'String( document.body.scrollHeight -'
        . ' window.innerHeight ) +'
        . ' ":" + window.scrollY',
    $code{'browser.callback.scroll_start_js_result'},
    { 'caller' => $call_sub, 'reply_id' => $reply_id }
);

