# >:]

# name  = root.agent.cmd.register_child
# param = <child_pid>
# descr = associate child process with parent instance
# todo  = also extract and set process start_time in process->child->PID = ...

my $instance_id;
my $child_pid  = $$call{'args'};
my $parent_pid = <[root.process.get_ppid]>->($child_pid);

foreach my $iid ( keys( %{<root.agent.instance>} ) ) {
    my $pid = <root.agent.instance>->{$iid}->{'process'}{'id'};
    if ( $pid == $parent_pid ) {
        $instance_id = $iid;
        last;
    }
}

return {
    'mode' => 'nack',
    'data' => 'found no matching parent'
    }
    if not defined $instance_id;

return {
    'mode' => 'ack',
    'data' => 'known already'
    }
    if exists
    <root.agent.instance>->{$instance_id}->{'process'}{'child'}->{$child_pid};

%{ <root.child>->{$child_pid} } = %{ <root.child>->{$parent_pid} };
<root.child>->{$child_pid}->{'agent_child'} = 1;

<root.agent.instance>->{$instance_id}->{'process'}{'child'}->{$child_pid} = 1;
<[base.log]>->( 1, "[instance:$instance_id] child pid $child_pid registered." );

return {
    'mode' => 'ack',
    'data' => 'registered'
};
