# >:]

# name = playlist.cmd.reload_file

my $playlist_file = <system.conf_path> . '/' . <playlist.file_name>;

my $count = <[playlist.load_file]>->($playlist_file);

return { 'mode' => 'nack', 'data' => 'playlist file not found!' }
    if $count == -1;

return { 'mode' => 'ack', 'data' => "playlist reloaded, $count entries" }
