# >:]

# name       = file.dir_tree

my $directory = $_[0];
my @out       = ();
foreach my $_dir ( &{$code{'file.ls_dir'}}($directory) ) {
    if ( $_dir !~ /^\./ ) {
        if ( -d "$directory/$_dir" ) {
            (@out) =
              ( @out, "$_[1]$_dir",
                &{$code{'file.dir_tree'}}( "$directory/$_dir", "$_[1]$_dir/" ) );
        }
        else { push ( @out, "$_[1]$_dir" ); }
    }
}
return @out;
