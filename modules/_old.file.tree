# >:]

# name       = file.tree

my $directory = $_[0];
my @files     = ();
foreach my $_dir ( @{ $code{'file.list_dir'}->($directory) } ) {
    if ( $_dir !~ /^\./ ) {
        if ( -d "$directory/$_dir" ) {
            (@files) =
              ( @files, "$_[1]$_dir",
                @{ $code{'file.tree'}->( "$directory/$_dir", "$_[1]$_dir/" ) } );
        }
        else { push ( @files, "$_[1]$_dir" ); }
    }
}
return \@files;
