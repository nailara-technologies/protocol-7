# >:]

# name       = base.check_command

my ( $cmd, $parameter ) = split ( /:/, $_[0] );
my $param_id = 0;
my @params = split ( /,/, $parameter );
&{$code{'base.log'}}(1,"command: $cmd");
my $func = $data{func}{$cmd};

foreach my $par (@params) { &{$code{'base.log'}}(1,"param[$param_id] = $par"); $param_id++; }
if ( defined &$func ) { &$func(@params) }
else {
    &{$code{'base.log'}}(1,"dangerous command error: '$func' does not exist!");
    &{$code{'net.nack'}}('unknown command!');
}
