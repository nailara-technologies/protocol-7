# >:]

# name  = base.cmd.online
# param = <user>
# descr = check if a user is online

if($$call{'args'} =~ /^\w+$/)
{
    my $usr = $$call{'args'};

    if ( defined( $data{'user'}{$usr} ) ) {
	return { 'mode' => 'ack', 'data' => 'present' };
    }
    else {
	return { 'mode' => 'nack', 'data' => 'not found' };
    }
}
else { $$reply{'data'} = 'invalid username' }

