# >:]

# name  = ticker.base.cmd.pause
# descr = pause the ticker animation

<ticker.child.paused> //= 0;

if ( !<ticker.child.paused> ) {
    kill( 'STOP', <ticker.child.pid> );
    <ticker.child.paused> = 1;
    return { 'mode' => 'ack', 'data' => 'ticker animation paused' };
} else {
    return { 'mode' => 'nack', 'data' => 'ticker was already paused!' };
}
