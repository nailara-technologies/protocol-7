# >:]

# name   = filter.cmd_add_chain
# descr  = compile a filter chain

if ( my $filter_id =
    &{ $code{'filter.compile_chain'} }( split( / /, $$call{'args'} ) ) )
{
    return { 'mode' => 'ack', 'data' => "chain compiled: id=$filter_id" };
}
else { return { 'mode' => 'nack', 'data' => 'failed to add filter' } }
