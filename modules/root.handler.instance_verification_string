# >:]

# name = root.handler.instance_verification_string

my ( $instance_id, $verification_string ) = @_;
my $instance_data = <root.agent.instance>->{$instance_id};

if ( $verification_string eq $instance_data->{'instance_verification'} ) {
    <[base.log]>->( 1, "instance $instance_id verification was successful..." );
    delete $instance_data->{'instance_verification'};
    <[agent.change_status]>->( $instance_id, 'online' );
} else {
    <[base.log]>->( 0, "instance $instance_id verification has failed!" );
    delete $instance_data->{'instance_verification'};
    <[agent.change_status]>->( $instance_id, 'failed' );
}
