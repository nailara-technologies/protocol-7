# name  = base.max-len.hash-val

my $hash_ref = shift;
warn 'expected hash reference <{C1>' if ref($hash_ref) ne qw| HASH |;

( undef, my $maxlen )
    = minmax map { length( $hash_ref->{$ARG} ) // 0 } keys %$hash_ref;

return $maxlen;

