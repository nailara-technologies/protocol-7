# >:]

# name       = base.sig_int

&{ $code{'base.log'} } ( 0, 'SIGINT received. shutting down..');
$SIG{'INT'} = 'exit';

eval ('&{ $code{\'net.send_all\'} } ("close SIGINT manual shutdown\n");');

if ( $data{'system'}{'verbosity'} >= 2 ) {
    print "DEBUG MODE: agent state:\n" . &{$code{'base.dump_data'}}();
}
&{ $code{'base.log'} } ( 1, 'done.');
exit(0);
