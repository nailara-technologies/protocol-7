## [:< ##

# name  = crypt.C25519.validate_keyname

my $name = shift // '';

if ( not length $name ) {
    warn 'expecting key name param <{C1}>';
    return undef;
}

return FALSE
    if $name !~ m|^<crypt.C25519.regex.key_name>$|
    or $name =~ m|\W{2,}|            ##[  not valid character sequences  ]##
    or $name =~ m<^[\W\.]|[\W.]$>;

return TRUE;

