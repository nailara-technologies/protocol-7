# >:]

# name   = file.cmd.scan
# descr  = generate file hash table

my $id = $$call{'session_id'};

my $count = 0;
if ( $count = &{ $code{'file.index.scan'} } () ) {

    &{ $code{'base.log'} } ( 1, "[$id] $count files scanned");

    return { 'mode' => 'ack',
	     'data' => "$count files scanned" }

}
else {

    &{ $code{'base.log'} } ( 0, "[$id] file scan failed");

    return { 'mode' => 'nack',
             'data' => 'file scan failed.' }

}
