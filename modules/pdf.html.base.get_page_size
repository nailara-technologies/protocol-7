# >:]

# name = pdf.html.base.get_page_size

my $pdf_file = shift;

if ( !-f $pdf_file ) {
    <[base.log]>->( 0, "pdf file '$pdf_file' does not exist" );
    return undef;
}

my $pdf        = Poppler::Document->new_from_file("file://$pdf_file");
my $page       = $pdf->get_page(0);
my $dimensions = $page->get_size();
my $width      = $dimensions->get_width;
my $height     = $dimensions->get_height;

return ( $width, $height );
