# >:]

# name = web.read_v_conf

if ( <[file.status]>->( $_[0] ) and $data{'file'}{'stat'}{'size'} > 0 )
{
    if ( $_[0] =~ /\/([^\/]+)$/ ) {
        my $vhost = $1;
        if ( $data{'system'}{'verbosity'} > 0 ) {
            <[base.log]>->( 1, 'reading vhost config for \'' . $vhost . '\'' );
        }
        <[base.extract_values]>->( "{'web'}{'vhost'}{'$vhost'}", <[base.get_file]>->( $_[0] ) );
    }
}
