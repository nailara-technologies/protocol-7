# >:]

# name   = web.session.check_auth
# args   = str(username),sha1(str(password))
# return = 0 (success), 1 (failed)

my ( $usr, $pwd ) = ( $_[0], $_[1] );

if ( $usr ne '' and $pwd ne '' and defined $data{'web'}{'account'}{$usr} ) {
    if ( $pwd eq $data{'web'}{'account'}{$usr} ) { return 0 }
}

return 1;

