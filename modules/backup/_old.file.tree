# >:]

# name       = _old.file.tree

my $directory = $_[0];
my @files     = ();
foreach my $_dir ( @{ <[file.list_dir]>->($directory) } ) {
    if ( $_dir !~ /^\./ ) {
        if ( -d "$directory/$_dir" ) {
            (@files) = (
                @files, "$_[1]$_dir",
                @{ <[file.tree]>->( "$directory/$_dir", "$_[1]$_dir/" ) }
            );
        } else {
            push( @files, "$_[1]$_dir" );
        }
    }
}
return \@files;
