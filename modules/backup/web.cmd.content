# >:]

# name = web.cmd.content

if    ( $_[2] eq 'file' ) { <[web.send_file]>->( $_[0] ) }
elsif ( $_[2]=~/^menu:(.+)$|^menu$/ ) {
    <[net.raw_out]>->( join ( "\n", <[web.gen_menu]>->( $_[0],$1 ) ) );
}
elsif ( $_[2] =~ /^content\:?(.*)$/ ) {
    <[net.raw_out]>->( <[web.gen_content]>->( $_[0], $1 ) );
}
elsif ( $_[2] =~ /^plugin\:?(.*)$/ ) {
        <[net.raw_out]>->( <[web.direct_plugin]>->( $_[0], $1 ) );
}
else{ <[net.raw_out]>->( '<p><h3>/* unkown content request */</h3></p>' ) }

