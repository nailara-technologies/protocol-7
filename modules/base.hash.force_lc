# >:]

# name = base.hash.force_lc

my $hash_ref = shift;

foreach my $key ( keys %{$hash_ref} ) {
    $hash_ref->{ lc($key) } = $hash_ref->{$key};
    <[base.hash.force_lc]>->( $hash_ref->{ lc($key) } )
        if ref $hash_ref->{$key} eq 'HASH';
    delete( $hash_ref->{$key} ) unless $key eq lc($key);
}
