# >:]

# name = browser.handler.quit_fade_out

my $window = shift;

<browser.quit_fade.start_time> //= <[base.time]>->(4);
my $delta_t = <[base.time]>->(4) - <browser.quit_fade.start_time>;

my $opacity = sprintf( "%.4f", 1 - $delta_t / 0.77 );

if ( $opacity > 0 ) {
    $window->set_opacity($opacity);
    $window->queue_draw();
} else {
    Gtk3->main_quit();
    exit(0);
}
