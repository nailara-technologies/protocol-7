# >:]

# name = base.file.put

my $file_path = shift;
my @content   = @_;

open( my $fh, '>', $file_path ) or die "$file_path: $!";
if ( @content > 1 ) {
    print {$fh} @content;
} elsif ( @content and ref( $content[0] ) eq 'ARRAY' ) {
    print {$fh} @{ $content[0] };
} elsif ( @content and ref( $content[0] ) eq 'SCALAR' ) {
    syswrite( $fh, ${ $content[0] } );
} elsif (@content) {
    syswrite( $fh, $content[0] );
}
close($fh);

return 1;
