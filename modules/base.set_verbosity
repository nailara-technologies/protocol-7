# >:]

# name       = base.set_verbosity

my ( $id, $com_id, $verbosity ) = @_;
if ( $verbosity =~ /^\d+$/ and defined $com_id ) {
    <[base.log]>->( 1, "[$id] setting verbosity to $verbosity" );
    $data{'system'}{'verbosity'} = $verbosity;
    <[net.ack]>->( "set verbosity level to $verbosity", $com_id );
} elsif ( $id =~ /^\d$/ and not defined $com_id ) {
    <[base.log]>->( 1, "setting verbosity to $verbosity" );
    $data{'system'}{'verbosity'} = $verbosity;
}
