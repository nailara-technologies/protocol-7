# >:]

# name   = net.cmd.dump_buffer
# descr  = dump buffer content

my $arg = $_[0];
my $reply = {};
my $id = $$arg{'session_id'};
my $buffer = $$arg{'args'};

if(defined $data{'buffer'}{$buffer})
{
    $$reply{'mode'} = 'raw';
    $$reply{'data'} = join ( "\n", @{ $data{'buffer'}{$buffer}{'data'} } ) . "\n";
}
else
{
    $$reply{'mode'} = 'nack';
    $$reply{'data'} = 'no such buffer';
}

return $reply;
