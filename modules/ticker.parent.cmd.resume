# >:]

# name  = ticker.parent.cmd.resume
# descr = resume paused ticker animation

<ticker.child.paused> //= 0;

if (<ticker.child.paused>) {
    kill( 'CONT', <ticker.child.pid> );
    <ticker.child.paused> = 0;
    return { 'mode' => 'ack', 'data' => 'ticker animation resumed' };
} else {
    return { 'mode' => 'nack', 'data' => 'ticker was not paused!' };
}
