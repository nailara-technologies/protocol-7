# name  = files.cmd.test_files
# descr = returns list of test files [debug cmd]

my $reply_str = '';

my $index = 0;

map {
    $reply_str .= sprintf( "[%d] ... %03d MB ... %s\n",
        ++$index, File::stat::stat($ARG)->size / 1024**2, $ARG )
} @{<files.testfiles>};

return {
    'mode' => qw| size |,
    'data' => $reply_str
};

