# >:]

# name  = browser.gtk3.cmd.abort_fade
# descr = abort fading in/out if in progress

my $was_fading = ( <window.fading_in> || <window.fading_out> ) ? 1 : 0;

<window.fading_in>  = 0;
<window.fading_out> = 0;

my $msg_txt = $was_fading ? 'fading aborted' : 'nothing was fading';

<[base.log]>->( 1, $msg_txt ) if $was_fading;

return { 'mode' => 'ack', 'data' => $msg_txt }
