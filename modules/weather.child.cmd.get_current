# >:]

# name  = weather.child.cmd.get_current
# descr = get current weather info

my $station_id = $$call{'args'};

return { 'mode' => 'nack', 'data' => "station_id parameter required" }
    if not defined $station_id or !length($station_id);

return {
    'mode' => 'raw',
    'data' => freeze( <[weather.child.query_api]>->("weather?id=$station_id") )
        . "\n"
};
