# >:]

# name       = base.exec_agentcode

if (    defined $data{'agent'}{ $_[0] }{'code'}
    and defined( &{ $data{'agent'}{ $_[0] }{'code'} } ) ) {
    <[base.log]>->( 1, "executing $_[0]-agent code.." );
    &{ $data{'agent'}{ $_[0] }{'code'} };
} else {
    <[base.log]>->( 1, "FATAL: $_[0]-agent code not defined!" );
}
