## >:] ##

# name  = base.number-cache.is_valid_template

my $template = shift // '';

##  redundant assertion  ##
##
return 0 if not length $template or $template eq qw| %d |;

##  required single %\d*d  ##
##
my @match_count = $template =~ m|(*nlb:\%)%\d*d|sg;
if ( @match_count != 1 ) {
    return 0;    ##  false  ##
}

return 5;        ## true ##

