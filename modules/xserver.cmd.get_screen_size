# >:]

# name  = xserver.cmd.get_screen_size
# descr = return xserver screen size in pixels

my $x = <xserver.x11>;

$x->choose_screen(0);    # XXX: doesn't support multiple screens yet!

my ( $width, $height ) = ( $x->width_in_pixels, $x->height_in_pixels );

return { 'mode' => 'ack', 'data' => "$width $height" }
