# >:]

# name  = root.agent.setup.add
# descr = store a new agent setup and return its id

my $agent_details = shift;
die 'root.agent.setup.add: expected a hash reference!'
    if ref($agent_details) ne 'HASH';

my $agent_name = $agent_details->{'name'};
die "root.agent.setup.add: 'name' parameter required (at least)"
    if not defined $agent_name or !length $agent_name;

$agent_details->{'type'} //= 'local';

my $agent_id = $code{'base.gen_id'}->( <root.agent.setup> );

<root.agent.setup>->{$agent_id} = $agent_details;

return $agent_id;
