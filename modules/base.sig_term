# >:]

# name = base.sig_term

( my $pname = $0 ) =~ s/ +$//;
$0 = "$pname :. shutdown in progress... please wait! ";
<[base.log]>->( 0, 'SIGTERM received. shutting down...' );

# <[net.send_all]>->("close SIGTERM"); # see base.sig_int
# $SIG{'ALRM'} = sub { <[base.log]>->( 1, 'done.'); exit(0); };
# alarm( $data{'sigterm'}{'timeout'} || 1 );

<[root.shutdown]>
    if exists <system.agent.type> and <system.agent.type> eq 'root';

if ( exists <system.kill_list> and ref(<system.kill_list>) eq 'ARRAY' ) {
    map { kill( 9, $_ ) } @{<system.kill_list>};
}

<[base.log]>->( 1, ': done.' );
exit(0);
