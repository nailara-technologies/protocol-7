# >:]

# name = root.handler.verify_instance_timeout

my $params      = shift->w->data;
my $instance_id = $params->{'instance_id'};
if ( not exists <root.agent.instance>->{$instance_id} ) {
    <[base.log]>->(
        2, "verify_instance_timeout: instance $instance_id no longer exists!"
    );
    return;
}
my $instance   = <root.agent.instance>->{$instance_id};
my $agent_name = $instance->{'agent_name'};

<[base.log]>->(
    0, "<!> instance $instance_id ('$agent_name') verification timeout <!>"
);

<[agent.change_status]>->( $instance_id, 'failed' );

delete $instance->{'timer'}->{'verify_instance'};
delete $instance->{'timer'} if !keys %{ $instance->{'timer'} };
