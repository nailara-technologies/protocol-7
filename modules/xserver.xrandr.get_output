# >:]

# name = xserver.xrandr.get_output

my $xr_str         = qx(xrandr 2>/dev/null);
my $orientation_re = 'left|right|normal|inverted';

foreach my $line ( split( /\n/, $xr_str ) ) {
    return ( $1, $2 )    # output_name[, orientation]
        if $line =~ /^(\S+) connected [x\d\+\-]+ ($orientation_re)?/;
}

die "failed to parse xrandr output!";
