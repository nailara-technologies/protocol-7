# >:]

# name = playlist-update.get_layout_config_name

my $file_hash = ${ <[file.slurp]>->(<playlist-update.hash_file>) };
$file_hash =~ s|\n$||;

<[base.log]>->( 1, "requesting config name from layout agent.." );

<[base.proto.nailara.command.send.local]>->(
    {   'command'   => "core.layout.config_name",
        'call_args' => {},
        'reply'     => {
            'handler' => 'playlist-update.handler.config_name_reply',
            'params'  => { 'file_hash' => $file_hash }
        }
    }
);
