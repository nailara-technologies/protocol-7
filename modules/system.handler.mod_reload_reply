# >:]

# name = system.handler.mod_reload_reply
# todo = error handling ...

my $module_name = <system.gfx_reload.module_name>;

<[base.proto.nailara.command.send.local]>->(
    {   'command'   => 'core.root.start',
        'call_args' => { 'args' => 'xserver' }
    }
);

<[base.callback.cmd_reply]>->(
    <system.gfx_reload.reply_id>,
    {   'mode' => 'ack',
        'data' => "module '$module_name' reloaded, xserver starting..."
    }
);

delete <system.gfx_reload>;
