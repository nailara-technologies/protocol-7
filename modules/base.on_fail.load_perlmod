# >:]

# name = base.on_fail.load_perlmod

my $perl_module = shift;
my $code_name = shift;
my @params = @_;

if ( $perl_module !~ /^(\w+|\:\:)+$/ ) {
  [base.log:0,"invalid module name '$perl_module'"];
  return;
}

if( !eval "use $perl_module" and !$@ and !length($!) ){
  return &{$code{$code_name}}(@params);
}
