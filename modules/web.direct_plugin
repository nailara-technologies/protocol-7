# >:]

# name = web.direct_plugin

my $cid    = $_[0];
my $params = $_[1];
my $plugin = '';

if ( $params =~ /^([^\,]+)\,(.+)$/ ){ ($plugin,$params)=($1,$2) }
else { $plugin = $params; $params='' }

if(defined &{$code{'plugin.web.content.'.$plugin}})
{
    return $code{'web.format'}->($code{'plugin.web.content.'.$plugin}->($params));
}
else{  return "<p><b>/* unknown plugin called */</b></p>" }
