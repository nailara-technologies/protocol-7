# >:]

# name  = notify.init_code
# descr = initializes the notify agent (which uses notify-osd)

my $bin_name  = 'notify-send';
my $icon_path = <system.root_path> . '/data/gfx/nailara_logo.png';
( my $bin_path = qx(which $bin_name) ) =~ s/\n$//;
die "$bin_name binary not found (please install 'notify-osd')"
    if !length($bin_path);

<system.path.notify_send>  = $bin_path;
<system.path.nailara_icon> = $icon_path;

0;
