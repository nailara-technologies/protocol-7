# >:]

# name       = base.init

$0 = $_[0];

if($_[0]=~/([^\.]+)\.([\w|\.]+)$/)
{
    ( $data{'system'}{'node'}{'name'}, $data{'system'}{'agent'}{'name'} ) = ($1,$2);
}

if ( $data{'system'}{'daemon_mode'} ) { &{ $code{'base.daemonize'} } }

&{ $code{'base.load_config_file'} }
  ( 'nailara.' . $data{'system'}{'agent'}{'name'} )
  or &{ $code{'base.log'}(0, "startup of "
    . $data{'system'}{'agent'}{'name'}
    . " agent failed!" ) };
