# >:]

# name = mpv.handler.event.pause

my $params = shift;

if ( <system.agent.mode> eq 'media-child' and <mpv.pause_next> ) {
    <mpv.pause_next>         = 0;
    <mpv.media_child_resume> = 1;
    <[base.log]>->( 2, "playback paused, reporting back to media agent.." );
    <[base.proto.nailara.command.send.local]>
        ->( { 'command' => "core.report_paused" } );
}
